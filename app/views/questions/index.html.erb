<h1>Let's Play</h1>

<ul>
  <% @questions.each do |question| %>
    <li>
      <%= link_to question.content, question_path(question) %>

        <ul>
          <% question.options.each do |option| %>
            <li>
              <%= option.scenario %>
              <%= pluralize(option.votes.count, "vote") %>
              <%= button_to '+1', upvote_question_option_path(question, option), method: :post %>
            </li>
          <% end %>
        </ul>
        <%= link_to "Delete this question", question_path(question), :data => {:confirm => "Are you sure?", :method => "delete"} %>
        <br>

    </li>
  <% end %>
</ul>

<%= link_to "Add a question", new_question_path(@question) %>
