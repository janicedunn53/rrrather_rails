<h1>Let's Play</h1>

<ul>
  <% @questions.each do |question| %>
    <li>
      <%= question.content %>

        <ul>
          <% question.options.each do |option| %>
            <li>
              <%= option.scenario %>
              <%= pluralize(option.votes.count, "vote") %>
              <%= button_to '+1', upvote_question_option_path(question, option), method: :post %>
            </li>
          <% end %>
        </ul>
        <br>
    </li>
  <% end %>
</ul>

<%= link_to "Add a question", new_question_path(@question) %>
